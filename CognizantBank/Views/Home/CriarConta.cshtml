@model CognizantBank.Entities.ContaCorrente

@{
    ViewData["Title"] = "CriarConta";
}

<div class="container">
    <div class="row">
        <h2 style="margin-bottom: 3%;">Criar Conta Corrente</h2>
        <form action="/Home/CriarConta" method="post" class="text-center">
            <div class="form-group col-md-12">
                <label style="margin-right: 1%;"> Definir o Valor Atual </label><input type="text" name="CurrentValue" />
            </div>
            <div class="form-group col-md-12">
                <label style="margin-right: 1%;"> Definir o Limite Maximo </label><input type="text" name="MaximumLimit" />
            </div>
            <button class="btn btn-primary col-md-12" type="submit" value="Criar"> Criar </button>
        </form>
    </div>
</div>